<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation"
    android:screenOrientation="landscape"
    android:background="@drawable/rhino2"
    tools:context=".FirmaPagina">

    <TextView
        android:id="@+id/textView"
        android:layout_width="700dp"
        android:layout_height="370dp"
        android:orientation="horizontal"
        android:screenOrientation="landscape"
        android:background="@drawable/menuiniciocolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />


    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/EspacioFirmar"
        android:layout_width="660dp"
        android:layout_height="260dp"
        android:screenOrientation="landscape"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        app:penColor="@color/black" />

    <Button
        android:id="@+id/GuardarFirma"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red"
        android:orientation="horizontal"
        android:text="Guardar Firmar"
        android:textColor="@color/white"
        android:screenOrientation="landscape"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/LimpiarFirma"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red"
        android:orientation="horizontal"
        android:screenOrientation="landscape"
        android:text="Borrar Firmar"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        tools:ignore="HardcodedText,SpUsage" />

    <ImageView
        android:id="@+id/firmapreview"
        android:layout_width="180dp"
        android:layout_height="83dp"
        android:screenOrientation="landscape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951"
        app:srcCompat="@drawable/fondoparafirma"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>